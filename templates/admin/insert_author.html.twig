{% extends 'admin/base.html.twig' %}

{% block main %}
    {#    J'utilise la fonction twig form et je lui passe la variable qui contient mon formulaire depuis le controleur Ã§a permet de geneger tout les inputs + label de mon formulaire#}
    <div class="form-group">
        {#        {{ form(form) }}#}
        {{ form_start(form) }}

        {{ form_label(form.firstName, 'Prenom',{'label_attr':{'class': 'form-label' }}) }}
