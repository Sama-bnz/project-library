{% extends 'admin/base.html.twig' %}

{% block title %}
    <title>La liste des oeuvres</title>
{% endblock %}

{% block main %}
    <a href="{{ path('admin_insert_book')}}">Ajouter un livre</a>

    {% for book in books %}
        <article class="livres">
            <img class="book-img" src="{{ asset('uploads/images/'~ book.image) }}" alt="book image">
            <h1 class="titre">{{ book.title }}</h1>
            <p>{{ book.nbPages }}</p>
            <p>Publié le {{ book.publishedAt|date('Y-m-d') }}</p>
            <p>{{ book.author.firstName }} {{ book.author.lastName }}</p>
            <a class="lien" href="{{ path('admin_show_book',{'id':book.id}) }}">En savoir plus sur le livre</a>
            <br>
            <br>
            <a class="lien" href="{{ path ('admin_update_book',{'id':book.id })}}">Voulez-vous modifié les données de ce livre?? </a>
            <br>
            <br>
            <a class="lien" href="{{ path ('admin_delete_book',{'id':book.id })}}">Voulez-vous supprimé ce livre? </a>

        </article>
    {% endfor %}
{% endblock %}

